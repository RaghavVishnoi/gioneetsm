 

        <div id="content-wrapper">
           <%=  render :partial => "errors/error", :locals => { :errors => @permission.errors }%>
          <div class="row">
            <div class="col-lg-12">
            <div class="main-box clearfix">
            <div class="clearfix">
              <div class="user_page">
               <h2>Add Permission </h2>
             <%= form_for @permission do |f| %>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group clearfix">
                        <label class="col-md-3">Role Name</label>
                        <div class="col-md-9">
                           <%= f.select :role_id, Role.pluck(:name, :id),{:prompt => "--select role--"},:class => 'form-control',:required => "required" %>
                        </div>
                      </div>
                      
                    </div>
                    <!-- left part of form end --> 
                    <div class="col-md-6">
                      <div class="form-group clearfix">
                        <label class="col-md-3">Module Name</label>
                        <div class="col-md-9">
                          <%= f.select :module_group_id,ModuleGroup.pluck(:name,:id),{:prompt => "--select module-name--"},:class => 'form-control',:required => "required" %>
                        </div>
                      </div>
                      
                    </div>
                     
                    <div class="col-md-1">
               <%= f.submit "Submit",:class => "btn btn-success rrm_frm_btn" %>
              
            </div>
            <div class="col-md-2">
               <%= link_to "Cancel",permissions_path,:class => "btn btn-danger ",data: { confirm: 'Are you sure?'} %>
              
            </div>
                  </div>
                 <% end %>
                </div>
              </div>
              </div>
            </div>
          </div>
          
          <footer id="footer-bar" class="row">
            <p id="footer-copyright" class="col-xs-12">
              Powered by Gionee
            </p>
          </footer>
        </div>
      </div>
    </div>
  </div>
    

 